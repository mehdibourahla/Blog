<% include ../partials/header.ejs %>

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3 border rounded">
            <h1>Add a new Blog</h1>
            <form action="/blogs" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="blog[title]" id="title" class="form-control" placeholder="Blog's title">
                </div>
                <div class="form-group">
                    <label for="img">Image</label>
                    <input type="text" name="blog[img]" id="img" class="form-control" placeholder="Image's URL">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="blog[description]" rows="4" id="description" class="form-control" placeholder="Blog's description..."></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

