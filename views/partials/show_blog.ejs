<div class="jumbotron">
        <h1 class="display-1">Showing a Blog</h1>
    </div>
    <div class="container" style="margin-bottom: 100px">
        <div class="row">
          <div class="col-9">
              <div class="card border-top-0">
                  <% if(currentUser && currentUser.type === "admin"){ %>
                    <div class="d-flex justify-content-start">
                        <a href="/blogs/<%=blog._id%>/edit" class="btn btn-success mr-2">EDIT</a>
                        <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">DELETE</button>
                        </form>
                    </div>
                 <% }%>
                    <img src="<%= blog.img %>" alt="" class="mb-2">
                    <div class="card-body">
                        <h5 class="card-title"><%= blog.title %></h5>
                        <p class="card-text"><%= blog.description %></p>
                    </div>
                    <div class="d-flex justify-content-end mb-3 mr-3">
                        <a href="/blogs/<%=blog._id%>/comments/new" class="btn btn-success">ADD A COMMENT</a>
                    </div>
                    <ul class="list-group list-group-flush">
                       <% blog.comments.forEach(function(comment){ %>
                            <li class="list-group-item p-0 comment">
                                <div class="d-flex justify-content-between">
                                    <div class="d-block mx-3 mt-3">
                                        <strong><%= comment.author.username %></strong>
                                        <small class="text-muted"><%= comment.author.email %></small>
                                    </div>
                                    <div class="d-flex flex-row">
                                        <form action="/blogs/<%=blog._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                                <span class="d-flex justify-content-center align-items-center commentButton">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                                    </button>
                                                </span>
                                        </form>
                                        <span class="d-flex justify-content-center align-items-center ml-1 commentButton">
                                            <a href="/blogs/<%=blog._id%>/comments/<%=comment._id%>/edit" class="btn btn-success">
                                                <i class="fa fa-edit" aria-hidden="true"></i>
                                            </a>
                                        </span>
                                    </div>
                                    
                                </div>
                                <div class="mx-3 mb-3">
                                    <%= comment.content %>
                                </div>
                            </li>
                       <% }) %>
                    </ul>
              </div>
          </div>   
        </div>
    </div>